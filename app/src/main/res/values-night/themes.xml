<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipeFarm" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--  Primary brand color.  -->
        <item name="colorPrimary">@color/cadet_blue</item>
        <item name="colorPrimaryVariant">@color/cadet_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/dark_grey</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--  Customize your theme here.  -->
        <item name="textAllCaps">false</item>
    </style>
</resources>